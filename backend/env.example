# Environment variables for Docker Compose
# Copy this file to .env and fill in your values
# DO NOT commit .env to git (it's in .gitignore)

# LLM API Keys (set at least one)
# For OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# For Anthropic/Claude (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# For Google Gemini (optional)
# GEMINI_API_KEY=your_gemini_api_key_here

# Generic fallback (optional)
# LLM_API_KEY=your_llm_api_key_here

# LLM Model to use (default: gpt-4o-mini)
LLM_MODEL=gpt-4o-mini

# Application secrets
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:80,http://localhost:5173
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# CSRF protection (set to true in production with HTTPS)
ENABLE_CSRF=false

